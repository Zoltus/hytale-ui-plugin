// UI File Example
Group {
  Anchor: (Width: 350, Height: 180);
  Background: #1a1a2e;
  Padding: (Full: 15);

  Label {
    Text: "Hello World!";
    Style: (FontSize: 18, TextColor: #ffffff);
  }

  Button {
    Text: "Click Me";
    Background: #0066cc;
    Style: (TextColor: #ffffff);
  }

  TextField {
    PlaceholderText: "Enter text...";
    Background: #2d2d44;
    Style: (TextColor: #ffffff);
  }
}

